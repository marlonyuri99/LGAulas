inteiro x
   cadeia dia 

   escreva ("Escreva um numero de 1 até 7: \n")
   leia (x)
   escolha (x) {
    caso 1:
    dia = "domingo"
    pare
    caso 2:
    dia=  "segunda feira"
    pare
    caso 3:
    dia = "Terça feira" 
    pare
    caso 4:
    dia = "quarta feira"
    pare
    caso 5:
    dia = "quinta feira"
    pare
    caso 6:
    dia = "sexta feira "
    pare
    caso 7:
    dia = "sabado"
    pare
     caso contrario:
     dia = "numero invalido" 

   } escreva("Dia da semana = ", dia)
   }
  }
